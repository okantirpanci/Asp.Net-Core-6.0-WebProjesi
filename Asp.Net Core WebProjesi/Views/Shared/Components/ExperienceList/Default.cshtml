@using EntityLayer.Concrete
@model List<Experience>

<div class="section px-3 px-lg-4 pt-5" id="experience">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Deneyimlerim</h2>
        </div>
        <div class="row">
            @foreach (var x in Model)
            
            {
                <div class="col-md-12">
                    <div class="card mb-3" data-aos="fade-right" data-aos-delay="100">
                        <div class="card-header px-3 py-2">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h3 class="h5 mb-1">@x.Name</h3>
                                    <div class="text-muted text-small"> <small>@x.Date</small></div>
                                </div><img src="@x.ImageUrl" width="48" height="48" alt="ui-ux" />
                            </div>
                        </div>
                        <div class="card-body px-3 py-2">
                            <p>@x.Description</p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>