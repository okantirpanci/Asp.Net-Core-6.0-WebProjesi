@using EntityLayer.Concrete
@model List<Testimonial>

<div class="section px-3 px-lg-4 pt-5" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Referanslar</h2>
        </div>
        <div class="row">

            @foreach (var x in Model)
            {
                <div class="col-md-12 mb-5" data-aos="fade-left" data-aos-delay="300">
                    <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@x.Comment</span></div>
                    <div class="d-flex justify-content-end align-items-end">
                        <div class="text-end me-2">
                            <div class="fw-bolder">@x.ClientName</div>
                            <div class="text-small">@x.Title / @x.Company</div>
                        </div><img class="me-md-3 rounded" src="@x.ImageUrl" width="96" height="96" alt="client 1" />
                    </div>
                </div>
            }

           

        </div>
    </div>
</div>